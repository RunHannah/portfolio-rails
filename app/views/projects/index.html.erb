<div class="container">
  <h1>Projects</h1>
  <% if current_user && current_user.admin %>
    <a><%= link_to "Add a Project", new_project_path %></a>
  <% end %>
  <hr>
</div>


<div class="container">
  <% if @projects.any? %>
  <ol>
    <% @projects.each do |project| %>
    <p><%= link_to project.project_name, project_path(project) %></p>

    <% end %>
  </ol>

  <% else %>
    <p>There are no current projects.</p>

  <% end %>
</div>
