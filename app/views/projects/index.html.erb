<div class="container" id="projects">

  <% if current_user && current_user.admin %>
    <a><%= link_to "Add a Project", new_project_path %></a>
  <% end %>

</div>


<div class="container">

  <div class="row">
    <div class="col m6 m6">
      <div class="card">

        <% if @projects.any? %>
          <% @projects.each do |project| %>

            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="<%= project.image.url(:medium) %>">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">
                <!-- <i class="material-icons right">more_vert</i></span> -->
              <p><%= link_to project.project_name, project_path(project) %></p>
              <p><a href="<%= project.github %>">Github</a></p>
            </div>

            <!-- <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">Card Title<i class="material-icons right">close</i></span>
              <p>Here is some more information about this product that is only revealed once clicked on.</p>
            </div> -->

            <% end %>

          <% else %>
            <p>There are no current projects.</p>

          <% end %>
      </div>
    </div>
  </div>
</div>
